
<strong>Editing: <%= @movie.title %></strong> 



<%= form_for :movie, url: movie_path(@movie.id), method: :patch do |f| %> 

<p> <%= f.label :title %><br> <%= f.text_field :title %> </p>

<p> <%= f.label :year_released, "Year Released" %><br> 
	<%= f.text_field :year_released %> </p>

<p> <%= f.label :description %><br> <%= f.text_area :description %> </p>  

<%= f.submit %> 

<% end %>

<%= button_to "Delete", movie_path(@movie), method: :delete, confirm: "Are you sure you want to delete this task?" %>

